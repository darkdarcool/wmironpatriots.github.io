---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

const { title, blog } = Astro.props;
---

<!-- Note: homepage will need to be structured differently from other pages most likely -->

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"} />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href="https://www.frc6423.org"/>
		<meta property="og:site_name" content="FRC 6423"/>
		<meta property="og:title" content="FRC 6423"/>
		<meta property="og:url" content="https://www.frc6423.org"/>
		<meta property="og:type" content="website"/>
		<meta property="og:description" content="The official website of FRC team 6423 Ward Melville Iron Patriots"/>
		<meta property="og:image" content={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"}/>
		<meta property="og:image:width" content="1500"/>
		<meta property="og:image:height" content="1500"/>
		<meta itemprop="name" content="FRC 6423"/>
		<meta itemprop="url" content="https://www.frc6423.org"/>
		<meta itemprop="description" content="The official website of FRC team 6423 Ward Melville Iron Patriots"/>
		<meta itemprop="thumbnailUrl" content={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"}/>
		<link rel="image_src" href={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"} />
		<meta itemprop="image" content={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"}/>
		<meta name="twitter:title" content="FRC 6423"/>
		<meta name="twitter:image" content={blog === "true" ? "../src/assets/favicon.png?":"./src/assets/favicon.png?"}/>
		<meta name="twitter:url" content="https://www.frc6423.org"/>
		<meta name="twitter:card" content="summary"/>
		<meta name="twitter:description" content="The official website of FRC team 6423 Ward Melville Iron Patriots"/>
		<meta name="description" content="The official website of FRC team 6423 Ward Melville Iron Patriots" />
		<title>{ title } FRC 6423</title>

		<ClientRouter />
	</head>
	<body>
		<slot />
	</body>
</html>